[
    {redis_proxy, [
        {redis_port, 6381},
        {enable_read_forward, true}
    ]},
    {distributed_proxy, [
        {slot_num, 2},
        {replica_size, 1},
        {replica_module, redis_proxy_replica},
        {preload_module, [{redis_proxy_status, worker}]},
        {check_replica_interval, 1000},
        {warn_up_check_interval, 100}
    ]},
    %% LAGER config
    {lager, [
        {lager_console_backend, info},
        {error_logger_redirect, true},
        {crash_log, "log/crash.log"},
        {handlers, [
            {lager_file_backend, [
                {file, "log/error.log"},
                {level, error},
                {size, 1048576000},
                {date, "$D0"},
                {count, 5}
            ]},
            {lager_file_backend, [
                {file, "log/info.log"},
                {level, info},
                {size, 1048576000},
                {date, "$D0"},
                {count, 10}
            ]},
            {lager_file_backend, [
                {file, "log/debug.log"},
                {level, debug},
                {size, 10485760},
                {date, "$D0"},
                {count, 5}
            ]}
        ]}
    ]},
    %% SASL config
    {sasl, [
        {sasl_error_logger, {file, "log/sasl.log"}}
    ]}
].

